{
  "name": "zk-session-demo",
  "version": "0.1.0",
  "private": true,
  "description": "ZK Session Credentials for x402 - Anonymous API access with rate limiting",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint packages/*/src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf packages/*/dist",
    "circuit:build": "cd circuits && nargo compile",
    "circuit:test": "cd circuits && nargo test",
    "issuer": "npm run dev --workspace=@zk-session/issuer",
    "api": "npm run dev --workspace=@zk-session/api",
    "demo": "npm run demo --workspace=@zk-session/cli"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
